#!/bin/sh
if [ $# != 1 ] ; then echo "usage: $0 1     or     $0 0"; exit 1;
fi

case "$1" in                                                                                                                                                                        
        "?"|status)                                                                                                                                                                 
                uci get gluon-node-info.@location[0].share_location
                ;;                                                                                                                                                                  
        1|on|0|off)
		loco=$1
		if [ $1 = "on" ] ; then loco=1; fi
		if [ $1 = "off" ] ; then loco=0; fi
	        uci set gluon-node-info.@location[0].share_location=$loco
		uci commit
                ;;                                                                                                                                                                  
esac 
