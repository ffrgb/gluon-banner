#!/bin/sh
if [ $# != 1 ] ; then echo "usage: $0 <longitude>    example : $0 5.6789"; exit 1;
fi

case "$1" in
        "?"|status)
                uci get gluon-node-info.@location[0].longitude
                ;;
        *)
		uci set gluon-node-info.@location[0].longitude=$1
                uci commit
                ;;                                                                                                                                                                  
esac
